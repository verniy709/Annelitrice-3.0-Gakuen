    <!--Anneli_Gakuen_BallisticShield-->
    <ThingDef ParentName="Anneli_Gakuen_8C_BaseVFEShield">
        <defName>Anneli_Gakuen_BallisticShield</defName>
        <label>(Gakuen)8C_BallisticShield</label>
        <description>Dyeable. But the color of shields has a bug.</description>
        <graphicData>
            <texPath>8C/Anneli_Gakuen_BallisticShield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>0.85</drawSize>
        </graphicData>
        <comps>
            <li Class="VFECore.CompProperties_Shield">
                <shieldTags>
                    <li>Gakuen_BallisticShield</li>
                </shieldTags>
                <useDeflectMetalEffect>true</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                    <li>Legs</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>8C/Anneli_Gakuen_BallisticShield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>1.3</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(-0.12, 0, 0.23)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(0.04, 0, 0.24)</offset>
                        <behind>false</behind>
                    </east>
                    <south>
                        <offset>(0.12, 1.00, 0.23)</offset>
                    </south>
                    <west>
                        <offset>(-0.04, 0, 0.24)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>10</weight>
                    <only>(50,45,50,255)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

